<UserControl
    x:Class="PianoRoll.Control.NoteControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PianoRoll.Control"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:PianoRoll.Model"
    xmlns:mv="clr-namespace:PianoRoll.ModelView"
    d:DesignHeight="14"
    d:DesignWidth="60"
    BorderBrush="#FF9BD7DA"
    ClipToBounds="True"
    SnapsToDevicePixels="True"
    mc:Ignorable="d">
    <UserControl.Background>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Offset="1" Color="#FF434E5D" />
            <GradientStop Color="#FF5D6E76" />
        </LinearGradientBrush>
    </UserControl.Background>
    <Grid x:Name="grid">
        <Label
            x:Name="Lyric"
            Height="28"
            Margin="-4,-6,0,-5"
            VerticalAlignment="Top"
            Content="dsadas"
            FontSize="12"
            Foreground="#FFC6F2FF"
            MouseDoubleClick="Lyric_MouseDoubleClick"
            MouseRightButtonDown="Lyric_MouseRightButtonDown" />
        <TextBox
            x:Name="EditLyric"
            Width="60"
            Height="20"
            Margin="0,-4,0,-6"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="14"
            KeyDown="EditLyric_KeyDown"
            SelectionOpacity="-4"
            Text="TextBox"
            TextWrapping="Wrap"
            Visibility="Hidden" />

    </Grid>
</UserControl>
