<UserControl x:Class="PianoRoll.Control.RenderNoteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PianoRoll.Control"
             mc:Ignorable="d"
             d:DesignHeight="14"
             d:DesignWidth="160">
    <Canvas>
        <Grid x:Name="grid"
              Canvas.Top="-15"
              HorizontalAlignment="Stretch"
              Width="{Binding RelativeSource={ RelativeSource Mode=FindAncestor,
                     AncestorType={x:Type local:RenderNoteView}},
                     Path= Width}">
            <Grid.RowDefinitions>
                <RowDefinition Name="EnvelopeRow"
                               Height="15" />
                <RowDefinition Name="NoteRow"
                               Height="{Binding RelativeSource={ RelativeSource Mode=FindAncestor,
                     AncestorType={x:Type local:RenderNoteView}},
                     Path=Height, FallbackValue=14}" />
                <RowDefinition Name="LyricRow" Height="15" />
            </Grid.RowDefinitions>
            <Grid x:Name="EnvelopeContainerGrid"
                  Grid.Row="0"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
                <Canvas Name="EnvelopeContainer"
                        HorizontalAlignment="Stretch"
                        Height="{Binding RelativeSource={ RelativeSource Mode=FindAncestor,
                     AncestorType={x:Type local:RenderNoteView}},
                     Path=ActualHeight, FallbackValue=14}">
                    <Canvas Name="Overlap"
                            Height="{Binding RelativeSource={ RelativeSource Mode=FindAncestor,
                             AncestorType={x:Type local:RenderNoteView}},
                             Path=ActualHeight, FallbackValue=14}">
                        <Polygon Stroke="#FFFF88FF"
                                 Fill="#11FF88FF"
                                 Stretch="Fill"
                                 Height="{Binding RelativeSource={ RelativeSource Mode=FindAncestor,
                             AncestorType={x:Type Canvas}},
                             Path=ActualHeight, FallbackValue=14}"
                                 Width="{Binding RelativeSource={ RelativeSource Mode=FindAncestor,
                             AncestorType={x:Type Canvas}},
                             Path=ActualWidth, FallbackValue=14}">
                            <Polygon.Points>
                                <Point X="0"
                                       Y="14" />
                                <Point X="14"
                                       Y="0" />
                                <Point X="14"
                                       Y="14" />
                            </Polygon.Points>
                        </Polygon>
                    </Canvas>
                    <Canvas Name="Sustain"
                            Height="{Binding RelativeSource={ RelativeSource Mode=FindAncestor,
                     AncestorType={x:Type local:RenderNoteView}},
                     Path=ActualHeight, FallbackValue=14}">
                        <Polygon Stroke="#FFAAAA00"
                                 Fill="#11AAAA00"
                                 Stretch="Fill"
                                 Height="{Binding RelativeSource={ RelativeSource Mode=FindAncestor,
                             AncestorType={x:Type Canvas}},
                             Path=ActualHeight, FallbackValue=14}"
                                 Width="{Binding RelativeSource={ RelativeSource Mode=FindAncestor,
                             AncestorType={x:Type Canvas}},
                             Path=ActualWidth, FallbackValue=14}">
                            <Polygon.Points>
                                <Point X="0"
                                       Y="0" />
                                <Point X="14"
                                       Y="0" />
                                <Point X="14"
                                       Y="14" />
                                <Point X="0"
                                       Y="14" />
                            </Polygon.Points>
                        </Polygon>
                    </Canvas>
                    <Canvas Name="Decay"
                            Height="{Binding RelativeSource={ RelativeSource Mode=FindAncestor,
                     AncestorType={x:Type local:RenderNoteView}},
                     Path=ActualHeight, FallbackValue=14}">
                        <Polygon Stroke="#FF22AAAA"
                                 Fill="#1122AAAA"
                                 Stretch="Fill"
                                 Height="{Binding RelativeSource={ RelativeSource Mode=FindAncestor,
                             AncestorType={x:Type Canvas}},
                             Path=ActualHeight, FallbackValue=14}"
                                 Width="{Binding RelativeSource={ RelativeSource Mode=FindAncestor,
                             AncestorType={x:Type Canvas}},
                             Path=ActualWidth, FallbackValue=14}">
                            <Polygon.Points>
                                <Point X="0"
                                       Y="0" />
                                <Point X="0"
                                       Y="14" />
                                <Point X="14"
                                       Y="14" />
                            </Polygon.Points>
                        </Polygon>
                    </Canvas>
                </Canvas>
            </Grid>
            <Grid x:Name="NoteMain"
                  Grid.Row="1"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
                <Border x:Name="NoteMainBorder">
                    <Rectangle Fill="#99225522"
                               Stroke="#FF005500"
                               Margin="0,0,0,0" />
                </Border>
            </Grid>
            <Label x:Name="Phoneme"
                   Margin="0,0,0,0"
                   Padding="2,0,5,0"
                   Grid.Row="2"
                   VerticalAlignment="Stretch"
                   VerticalContentAlignment="Center"
                   HorizontalAlignment="Left"
                   Width="Auto"
                   Content="a"
                   FontSize="12"
                   Foreground="#FF005000" />
        </Grid>
    </Canvas>
</UserControl>