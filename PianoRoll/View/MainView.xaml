<Window
    x:Class="PianoRoll.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:PianoRoll.Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PianoRoll"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Roulade"
    Width="900"
    Height="550"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid Background="#FFECECEC">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="35" />
            <RowDefinition Height="464*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <control:PianoRollControl
            x:Name="PianoRollControl"
            Grid.Row="2"
            Margin="5"
            Background="#FF001122"
            MouseMove="PianoRollControl_MouseMove" />
        <Menu
            Width="131"
            Height="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#00A9D1F4">
            <MenuItem Header="_File">
                <MenuItem Click="MenuItemOpenUst_Click" Header="_Open UST" />
                <MenuItem Click="MenuItemExit_Click" Header="_Exit" />
                <MenuItem Click="MenuItemSave_Click" Header="_Save" />
            </MenuItem>
            <MenuItem Click="MenuItemSinger_Click" Header="_Singer" />
            <MenuItem Header="_Render">
                <MenuItem Click="MenuItemPlay_Click" Header="_Play" />
                <MenuItem Click="MenuItemStop_Click" Header="_Stop" />
            </MenuItem>
        </Menu>
        <Label
            x:Name="CursorTrack"
            Grid.RowSpan="2"
            Width="109"
            Height="35"
            Margin="130,-5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="sdsd"
            Visibility="Hidden" />
        <ToolBarPanel Grid.Row="1" Background="#FF001122">
            <Border
                Width="120"
                Height="30"
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <Label Content="AAAAAAAAA" Foreground="#FFFFFF" />

            </Border>
        </ToolBarPanel>

    </Grid>
</Window>
