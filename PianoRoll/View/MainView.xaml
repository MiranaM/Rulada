<Window
    x:Class="PianoRoll.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:PianoRoll.Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PianoRoll"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Roulade"
    Width="900"
    Height="550"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid Background="#FFDADADA">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="33" />
            <RowDefinition Height="203*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <control:PianoRollControl
            x:Name="PianoRollControl"
            Grid.Row="2"
            Margin="5"
            Background="#FF001122"
            MouseMove="PianoRollControl_MouseMove" />
        <Menu
            Height="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#00A9D1F4">
            <MenuItem Header="_Файл">
                <MenuItem Click="MenuItemOpenUst_Click" Header="_Открыть UST" />
                <MenuItem Click="MenuItemSave_Click" Header="_Сохранить" />
                <MenuItem Click="MenuItemSettings_Click" Header="_Настройка" />
                <MenuItem Click="MenuItemExit_Click" Header="_Выход" />
            </MenuItem>
            <MenuItem
                Name="VoiceMenu"
                Click="MenuItemSinger_Click"
                Header="_Голос"
                IsEnabled="False" />
            <MenuItem
                Name="RenderMenu"
                Header="_Рендер"
                IsEnabled="False">
                <MenuItem Click="MenuItemPlay_Click" Header="_Воспроизвести" />
                <MenuItem Click="MenuItemStop_Click" Header="_Остановить" />
            </MenuItem>
        </Menu>
        <Label
            x:Name="CursorTrack"
            Grid.RowSpan="2"
            Width="109"
            Height="35"
            Margin="130,-5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="sdsd"
            Visibility="Hidden" />
        <ToolBarPanel Grid.Row="1" Background="#FF001122">
            <Border
                Width="120"
                Height="30"
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <Label
                    x:Name="SingerName"
                    Content="------------------"
                    Foreground="#FF90FFFF"
                    IsEnabled="False"
                    MouseDoubleClick="SingerNameInfo_dClick"
                    MouseRightButtonDown="SingerName_MouseRightButtonDown"
                    MouseRightButtonUp="SingerName_MouseRightButtonUp" />

            </Border>
        </ToolBarPanel>
        <Rectangle
            Grid.Row="3"
            Width="Auto"
            Margin="0"
            Fill="#FF001122"
            Stroke="Black" />

    </Grid>
</Window>
